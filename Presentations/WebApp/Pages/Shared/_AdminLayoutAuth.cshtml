<!DOCTYPE html>
<html lang="tr" class="js">

<head>
    <meta charset="utf-8">
    <meta name="author" content="Pomelosoft">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <!-- Fav Icon  -->
    <link rel="shortcut icon" href="/images/favicon.png">
    <!-- Page Title  -->
    <title>@ViewData["Title"]</title>
    <!-- StyleSheets  -->
    <link rel="stylesheet" href="/admin_assets/css/dashlite.css?ver=3.0.3">
    <link id="skin-default" rel="stylesheet" href="/admin_assets/css/theme.css?ver=3.0.3">
</head>

<body class="nk-body bg-white npc-default pg-auth">
    @Html.AntiForgeryToken()
    <div class="loading-app">
        <div class="text-center">  <div class="spinner-border" role="status">    <span class="visually-hidden">Loading...</span>  </div></div>
    </div>
    <div class="nk-app-root">
        <!-- main s -->
        <div class="nk-main ">
            <!-- wrap s -->
            <div class="nk-wrap nk-wrap-nosidebar">
                <!-- content s -->
                <div class="nk-content ">
                    <div class="nk-split nk-split-page nk-split-lg" style="margin:auto">
                        <div class="nk-split-content nk-block-area nk-block-area-column bg-white">
                            
                            @RenderBody()
                            <div class="nk-block nk-auth-footer">
                              
                                <div class="mt-3">
                                    <p>&copy; @DateTime.Now.Year www.pomelosoft.com. Tüm Hakları Saklıdır.</p>
                                </div>
                            </div><!-- .nk-block -->
                        </div><!-- .nk-split-content -->
                 
                    </div><!-- .nk-split -->
                </div>
                <!-- wrap e -->
            </div>
            <!-- content e -->
        </div>
        <!-- main e -->
    </div>
    <!-- app-root e -->
    <!-- JavaScript -->
    <script src="/admin_assets/js/bundle.js?ver=3.0.3"></script>
    <script src="/admin_assets/js/scripts.js?ver=3.0.3"></script>
    <script src="/admin_assets/js/app.js?ver=3.0.3"></script>
  <partial name="~/Pages/Shared/AdminPartialViews/_Modal.cshtml" />
 </body>
</html>