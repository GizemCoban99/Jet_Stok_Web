@page
@model WebApp.Pages.CampaignModel
@{
    ViewData["Title"] = "Pazaryeri Entegrasyon Programı Kampanyaları - Jetstok";
    ViewData["Description"] = "Jetstok Kampanyaları ile e-ticaret ve entegrasyon hizmetlerimizde avantajlı fırsatlar ve indirimlerden yararlanarak işletmenizi büyütün! Hemen incele.";
    ViewData["Canonical"] = "https://www.jetstok.com/kampanyalar"; 
    var domain = "";
#if DEBUG
            domain = $"https://www.jetstok.com";
#endif
}
 <main class="single-project pt-0 style-5">
<main class="portfolio-page style-1">
    <section class="portfolio-projects section-padding pt-0 pb-0">
        <div class="section-head text-center mb-80 top-bg-gray style-5">
            <h1 class="mb-20"><span class="headerSpanColor"> Kampanyalar </span> </h1>
            <p>Jet Stok'un avantajlı güncel kampanyalarını buradan takip edebilirsiniz.</p>
        </div>
        <div class="container">
            <section class="portfolio style-1">
                <div class="content">
                    <div class="row mix-container">
                        @foreach (var item in Model.list.OrderBy(q => q.order_number).ToList())
                        {
                            var url = string.IsNullOrEmpty(item.seo_url) ? "javascript:;" : item.seo_url;
                            var image = $"{domain}/upload/{item.image}";

                            <div class="col-lg-4 mix security consultation">
                                <div class="portfolio-card mb-50" style="text-align:center;">
                                    <a title="@item.name" href="javascript:;">
                                        <div class="img">
                                            @*<img class="img_zoom" src="assets/img/projects/prog/1.jpeg" alt="">*@
                                            <img class="img_zoom_two mb-4 campaign-list-img" src="@image" alt="@item.name">
                                        </div>
                                        @* <div class="info campaign-title">
                                    <h6>
                                    @item.name
                                    </h6>
                                    </div> *@
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        </div>
    </section>
</main>
</main>
<partial name="~/Pages/Shared/_FaqPartial.cshtml" model="Model.faqs" />
<partial name="~/Pages/Shared/_BlogPartial.cshtml" model="Model.blogs" />