<section class="services style-8 section-padding pb-0 bg-gray2">
    <div class="container">
        <div class="section-head style-8 text-center mb-80">
            <h2>
                <span>Entegrasyon Özellikleri </span>
            </h2>
            <div class="subtitle mb-10">
                <p>Tüm E-ticaret süreçlerinizi tek bir platformda birleştiren akıllı entegrasyon özellikleriyle zamandan tasarruf edin, operasyonlarınızı hızlandırın ve verimliliğinizi artırın!</p>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="services-slider8">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model.features.OrderBy(q => q.id).Take(12))
                    {
                        var title = item.name;
                        var summary = item.summary;
                        if (title.Length > 28)
                        {
                            title = title.Substring(0, 28) + "...";
                        }
                        if (summary.Length > 35)
                        {
                            summary = summary.Substring(0, 35) + "...";
                        }
                        <div class="col-xxl-3 col-xl-3 col-lg-4 col-md-6 col-sm-6 pb-4">
                            <div class="service-card bg-white style-8">
                                @* <div class="icon">

                            <img src="/upload/@item.image" alt="">
                            </div> *@
                                <div class="info">
                                    <span>@Html.Raw(title)</span>
                                    <p>@Html.Raw(item.summary)</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex align-items-center justify-content-center">
        <a href="/ozellikler" class="btn rounded-pill bg-blue4 fw-bold text-white me-4">
