@page
@model WebApp.Pages.Admin.GenericValue.GenericValuesModel
@{
    ViewData["Title"] = Model.pageTitle;
    Layout = "_AdminLayout";
}
<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block-head nk-block-head-sm">
                    <div class="nk-block-between">
                        <div class="nk-block-head-content">
                            <h3 class="nk-block-title page-title">@Model.type.type_name Listesi</h3>
                        </div>

                        <div class="nk-block-head-content">
                            <div class="toggle-wrap nk-block-tools-toggle">
                                <a href="#" class="btn btn-icon btn-trigger toggle-expand me-n1" data-target="more-options"><em class="icon ni ni-more-v"></em></a>
                                <div class="toggle-expand-content" data-content="more-options">
                                    <ul class="nk-block-tools g-3">
                                        <li class="nk-block-tools-opt">
                                            <a href="/PomeloAdmin/generic-value-add-or-update/@Model.type.id/0" title="Ekle" class="btn btn-sm btn-primary">
                                                <em class="icon ni ni-plus"></em><span>Ekle</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <table class="datatable-init-ajax nowrap nk-tb-list is-separate" data-auto-responsive="false">
                    <thead>
                        <tr class="nk-tb-item nk-tb-head">
                            <th class="nk-tb-col tb-col-sm">Adı</th>
                            @* <th class="nk-tb-col tb-col-sm">Email</th>
                            <th class="nk-tb-col tb-col-sm">Status</th>*@
                            <th class="nk-tb-col tb-col-sm">Sıra</th>
                            <th class="nk-tb-col tb-col-sm"></th>
                        </tr>
                    </thead>

                </table>

            </div>
        </div>
    </div>
</div>

<script>
    var datatableColumn = [
        { "data": "name", "className": "nk-tb-col export-column" },
        { "data": "order_number", "className": "nk-tb-col export-column" },
        //{ "data": "email", "className": "nk-tb-col export-column" },
        //{
        //    "data": "status",
        //    "className": "nk-tb-col",
        //    "render": function (data, type, row) {
        //        return row['status'] == 1 ? 'Active' : 'Passive';
        //    }
        //},
        {
            "className": "nk-tb-col",
            "render": function (data, type, row) {
                var button = '<li><a title="Güncelle" href="/PomeloAdmin/generic-value-add-or-update/' + row.type_id + '/' + row.id + '"><em class="icon ni ni-edit"></em><span>Update</span></a></li>';
                button += '<li><a href="#" title="Sil" onclick="ShowConfirmDeleteModel(\'/PomeloAdmin/generic-values/' + row.type_id + '\',' + row.id + ')"><em class="icon ni ni-trash"></em><span>Sil</span></a></li>';
                return GenerateDataTableRowDropdownButton(button);
            }
        }
    ];
</script>
