@model WebApp.Pages.ContactModel
@{
    ViewData["Title"] = "İletişim & Bize Ulaşın - Jet Stok";
    ViewData["Description"] = "Bize Ulaşın: Jetstok ekibi ile iletişime geçerek sorularınıza hızlı ve profesyonel destek alın. Bütün iletişim kanalları üzerinden bize ulaşabilirsiniz.";
    ViewData["Canonical"] = "https://www.jetstok.com/bize-ulasin";
 
}

@section HeaderContents{
}
<!-- ====== start contact page ====== -->
 <main class="contact-page style-5">

<section class="contact section-padding pt-0 pb-80 pt-00 style-6">
    <div class="section-head text-center top-bg-gray style-4 mb-40">
        @*<small class="title_small">İlerişim</small>*@
        <h1 class="mb-20">  <span class="headerSpanColor">Bizimle İletişime Geçin </span> </h1>
        <p>İletişim talebinizi aldıktan sonra sizinle iletişime geçeceğiz</p>
    </div>
    <div class="container ">
        <div class="content">
            <div class="row justify-content-center">
                <div class="col-lg-9">

                    <form asp-page="Contact" class="form" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group mb-20">
                                    <select class="form-control js-select2 type" id="selectType" name="selectType">
                                        <option value="0">Seçim Yapınız</option>
                                        <option value="1">Şikayet</option>
                                        <option value="2">Öneri</option>
                                        <option value="3">Bilgi</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group mb-20">
                                    <input type="text" asp-for="contactForm.Name" class="form-control" placeholder="Adınız" required>
                                </div>
                            </div>
                           @*  <div class="col-lg-6">
                                <div class="form-group mb-20">
                                    <input type="text" asp-for="contactForm.Email" class="form-control" placeholder="Eposta Adresi" required>
                                </div>
                            </div> *@
                            <div class="col-lg-6">
                                <div class="form-group mb-20">
                                    <input type="number" asp-for="contactForm.Phone" class="form-control" placeholder="Telefon Numaranız" required>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group mb-20">
                                    <input type="text" asp-for="contactForm.Title" class="form-control" placeholder="Konu" required>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <textarea rows="5" asp-for="contactForm.Description" class="form-control" placeholder="Size nasıl yardımcı olabiliriz?"></textarea>
                                </div>
                            </div>
                            <br />
                            <div class="col-lg-12 text-center btn-contact" style="margin-top:25px;">
                                <input type="submit" value="Sizi Arayalım" class="btn rounded-pill bg-blue4 fw-bold text-white me-4">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            @*<img src="/assets/img/icons/contact_a.png" alt="" class="contact_a">
            <img src="/assets/img/icons/contact_message.png" alt="" class="contact_message">*@
        </div>
    </div>
</section>
